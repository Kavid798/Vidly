@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "DisplayMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Customer</h2>
<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>CustomerName</th>
            <th>MembershipTypeName</th>
            <th>Delete</th>
        </tr>
